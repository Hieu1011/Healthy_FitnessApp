<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Dear, "
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_nameavatar"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="nameavatar"
                android:textColor="@color/black" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="16dp"
            android:text="Thank you for using my app, your opinion will help us improve my app and bring you better experience."
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edtemail"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:elevation="10dp"
            android:focusable="false"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_height="50dp"
            android:background="@drawable/customedt"/>
        <EditText
            android:id="@+id/edtsubject"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:elevation="10dp"
            android:fontFamily="@font/roboto"
            android:padding="3dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_height="50dp"
            android:background="@drawable/customedt"/>
        <EditText
            android:id="@+id/edtdiscription"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:elevation="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="top"
            android:padding="3dp"
            android:hint="Discription"
            android:imeOptions="actionDone"
            android:layout_height="250dp"
            android:background="@drawable/customedt"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsendemail"
            android:layout_marginTop="60dp"
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:background="@drawable/button_blue"
            android:text="SEND"
            android:textSize="18dp"
            android:elevation="6dp"
            android:textColor="@color/white"
            android:layout_height="40dp"/>
    </LinearLayout>

</FrameLayout>