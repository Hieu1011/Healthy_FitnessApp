<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewPrimaryTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SimpleImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="CardViewSubTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/middlegrey</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberProgressBar_Custome">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="progress_current">0</item>
        <item name="progress_max">100</item>
        <item name="progress_reached_bar_height">4.5dip</item>
        <item name="progress_reached_color">@color/colorAccent</item>
        <item name="progress_text_color">@color/colorAccent</item>
        <item name="progress_text_size">12.0sp</item>
        <item name="progress_unreached_bar_height">2.25dip</item>
        <item name="progress_unreached_color">#ffcccccc</item>
    </style>

    <style name="NumberProgressBar_Customer1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="progress_current">0</item>
        <item name="progress_max">100</item>
        <item name="progress_reached_bar_height">4.5dip</item>
        <item name="progress_reached_color">@color/black</item>
        <item name="progress_text_color">@color/black</item>
        <item name="progress_text_size">9sp</item>
        <item name="progress_unreached_bar_height">2.25dip</item>
        <item name="progress_unreached_color">#ffffff</item>
    </style>
</resources>